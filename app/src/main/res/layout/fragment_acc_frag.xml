<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.duobros.appu.bloodbank_beeta.Acc_frag">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_delete_white_18dp"
        android:id="@+id/del"
        android:text="Delete all records"/>
    <Button
        android:layout_width="match_parent"
        android:background="@drawable/mybutton"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/chan"
        android:textColor="@android:color/white"
        android:text="change account details"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <Button
        android:layout_width="match_parent"
        android:background="@drawable/mybutton"
        android:padding="10dp"
        android:id="@+id/feedb"
        android:text="share the app"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_share_white_16dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
